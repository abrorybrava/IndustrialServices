                    var cmHtml =
                        '<div class="col-6 col-lg-3 mb-5 mb-md-5">' +
                        '<img src="/assets/img/' + cm.path_logo + '" width="200" height="auto" alt="Customer Mapping Image"/>' +
                        '</div>';

                    $('#cm-list').append(cmHtml);
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }
</script>



