<script>
    loadArtikels();

    function loadArtikels() {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAllArtikelsinHome";
        var method = "GET";

        $('#article-list').empty();

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var articleList = data.data;

                articleList.forEach(function (article) {
                    // Ubah format tanggal
                    var formattedDate = new Date(article.tanggal_rilis).toLocaleDateString('en-US', {
                        day: 'numeric',
                        month: 'long',
                        year: 'numeric'
                    });

                    var maxTitleLength = 45; // Set the maximum length for the title

                    // Truncate the title if it exceeds the maximum length
                    var truncatedTitle = article.judul_artikel.length > maxTitleLength ?
                        article.judul_artikel.substring(0, maxTitleLength) + '...' :
                        article.judul_artikel;

                    var articleHtml =
                        '<div class="col-6 col-lg-4 mb-5 mb-md-5">' +
                        '<a style="color:black;" class="card-img d-block sk-thumbnail img-ratio-3 rounded-bottom-0" href="/Home/ArtikelDetail?id=' + article.id_artikel + '">' +
                        '<div class="card border rounded-3 sk-fade h-100">' +
                        '<div class="card-zoom position-relative rounded-bottom-0">' +
                        '<img class="shadow-light-lg img-fluid zoom-on-hover" src="/assets/img/' + article.sampul_artikel + '" alt="Article Image"/>' +
                        '<div class="card-footer p-3">' +
                        '<h6 class="fw-bolder line-clamp-2 mb-0" style="font-family:Barlow;">' + truncatedTitle + '</h6>' +
                        '<span class="text-muted" style="font-size:14px;font-family:Barlow;">' + formattedDate + '</span>' +
                        '</div>' +
                        '</div>' +
                        '</div>' +
                        '</a>' +
                        '</div>';

                    $('#article-list').append(articleHtml);
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }

    loadPelatihan();

    function loadPelatihan() {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAllPelatihaninHome";
        var method = "GET";

        // Define the formatDate function
        function formatDate(dateAwal, dateAkhir) {
            var options = { day: 'numeric', month: 'long', year: 'numeric' };
            var awal = new Date(dateAwal);
            var akhir = new Date(dateAkhir);

            // Jika bulan dan tahunnya sama
            if (awal.getFullYear() === akhir.getFullYear() && awal.getMonth() === akhir.getMonth()) {
                options.month = 'long';
                return awal.getDate() + ' - ' + akhir.toLocaleDateString('en-GB', options);
            } else {
                // Jika bulan dan tahunnya berbeda
                return awal.toLocaleDateString('en-GB', options) + ' - ' + akhir.toLocaleDateString('en-GB', options);
            }
        }

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                // Hapus data sebelumnya dari container
                $('#sug-pelatihan').empty();

                var list = data;

                if (list.length > 0) {
                    list.forEach(function (pelatihan, index) {
                        $.ajax({
                            url: hostname + "GetTipePelatihan?id=" + pelatihan.id_tipe_pelatihan,
                            method: "GET",
                            contentType: "application/json",
                            success: function (tipePelatihanDetails) {
                                var tipe_pelatihan = tipePelatihanDetails.tipe_pelatihan;
                                $.ajax({
                                    url: hostname + "GetPelatihanDesk?id=" + pelatihan.id_pelatihan,
                                    method: "GET",
                                    contentType: "application/json",
                                    success: function (desk) {
                                        var desk_pelatihan = desk.deskripsi_pelatihan;
                                        var maxTitleLength = 35; // Set the maximum length for the title
                                        // Truncate the title if it is not null and exceeds the maximum length
                                        var truncatedTitle = desk_pelatihan && desk_pelatihan.length > maxTitleLength ?
                                            desk_pelatihan.substring(0, maxTitleLength) + '...' :
                                            desk_pelatihan;
                                        var newRow =
                                            '<div class="col col-md-12" style="padding-bottom:20px;font-family:Barlow;">' +
                                            '<a class="pelatihan" data-id_pelatihan="' + pelatihan.id_pelatihan + '" style="text-decoration: none; color: inherit;">' +
                                            '<div class="card" style="border-radius: 15px; background-color: rgba(255, 255, 255, 0.5); border:none;">' +
                                            '<div class="card-body p-4">' +
                                            '<div class="d-flex text-black">' +
                                            '<div class="flex-shrink-0">' +
                                            '<img src="/assets/img/' + pelatihan.path_foto_pelatihan + '" alt="Generic placeholder image" class="img-fluid" style="width: 75px; border-radius: 10px;">' +
                                            '</div>' +
                                            '<div class="flex-grow-1 ms-3">' +
                                            '<h5 class="mb-1" style="font-family:Barlow;">' + pelatihan.nama_pelatihan + '</h5>' +
                                            '<p class="mb-2" style="color: gray;font-family:Barlow;">' + tipe_pelatihan + '</p>' +
                                            '<p class="mb-1" style="font-family:Barlow;color:rgba(0,0,0,0.4);font-size:14px;">' + formatDate(pelatihan.tanggal_pelatihan_awal, pelatihan.tanggal_pelatihan_akhir) + '</p>' +
                                            '</div>' +
                                            '</div>' +
                                            '</div>' +
                                            '</div>' +
                                            '</a>' +
                                            '</div>';

                                        $('#sug-pelatihan').append(newRow);
                                        $('.pelatihan[data-id_pelatihan="' + pelatihan.id_pelatihan + '"]').click(function () {
                                            var id_pelatihan = $(this).data("id_pelatihan");
                                            detailPelatihan(id_pelatihan);
                                        });
                                    },
                                    error: function (xhr, status, error) {
                                        console.error("Error:", error);
                                    }
                                });
                            },
                            error: function (xhr, status, error) {
                                console.error("Error:", error);
                            }
                        });
                    });
                } else {
                    // Tampilkan pesan atau card khusus jika tidak ada data yang ditemukan
                    var noDataCard = '<div class="col col-lg-12 justify-content-center" style="padding-bottom:20px;font-family:Barlow;">' +
                        '<div class="col-12 text-center">' +
                        '<div class="card" style="border-radius: 15px; background-color: rgba(255, 255, 255, 0.5); border:none;">' +
                        '<div class="card-body p-4">' +
                        '<p class="mb-2 pb-1 text-center" style="color: gray;">No current training available.</p>' +
                        '</div>' +
                        '</div>' +
                        '</div>' +
                        '</div>';

                    $('#sug-pelatihan').append(noDataCard);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }
    $('#sug-pelatihan').on('click', '.pelatihan-link', function (e) {
        e.preventDefault(); // Mencegah perilaku default dari tautan
        var idPelatihan = $(this).data('id');
        detailPelatihan(idPelatihan);
    });
    function detailPelatihan(id){
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetPelatihanforBK?id=" + id
        var method = "GET";
        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                if (data.bidang_keahlian == 'Technical'){
                    window.location.href = '/Home/DetailPelatihanTechnical?id=' + id;
                } else if (data.bidang_keahlian == 'Non-Technical'){
                    window.location.href = '/Home/DetailPelatihanNonTechnical?id=' + id;
                }
            },
        });
    }

