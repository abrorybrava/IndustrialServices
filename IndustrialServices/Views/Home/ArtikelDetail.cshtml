<script>
    // Panggil fungsi untuk mengambil data artikel
    loadDetailArtikel();

    function loadDetailArtikel() {
        var id = @ViewBag.Id;
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetDetailArtikel?id=" + id;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var artikel = data.data;

                // Tambahkan data artikel ke elemen HTML
                var dataHeader = '<div class="text-center">' +
                    '<h5 style="color: black; font-family:Barlow; font-weight: 600; font-size: 32px; margin-bottom: 5px;">' + artikel.judul_artikel + '</h5>' +
                    '<span class="post-date" style="color:rgba(0,0,0,0.4); font-family:Barlow; font-weight: 600; font-size: 14px;">' + formatDateWithDay(artikel.tanggal_rilis) + ' - by ' + artikel.role + '</span>' +
                    '</div>';

                var sampul = '<img src="/assets/img/' + artikel.sampul_artikel + '" style="width: 50%; height: auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">';

                $('#data-header').html(dataHeader);
                $('#data-sampul').html(sampul);

                // Tambahkan detail artikel ke elemen HTML
                $('#load-detail-article').html('<div class="container">' +
                    '<div class="row">' +
                    '<div class="col-sm-9 mx-auto" >' + // Tambahkan kelas mx-auto di sini
                    '<p style="color:black;font-family:Barlow; font-weight: 400; font-size: 24px;box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">' + artikel.isi_artikel + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>');
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }

    // Fungsi untuk memformat tanggal
    function formatDateWithDay(dateString) {
        var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        var formattedDate = new Date(dateString).toLocaleDateString('en-GB', options);
        return formattedDate;
    }


    loadAnotherArtikels();

    function loadAnotherArtikels() {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAnotherArtikel?id=" + @ViewBag.Id;
        var method = "GET";

        $('#article-list').empty();

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var articleList = data.data;
                console.log(data)

                articleList.forEach(function (article) {
                    // Ubah format tanggal
                    var formattedDate = new Date(article.tanggal_rilis).toLocaleDateString('en-US', {
                        day: 'numeric',
                        month: 'long',
                        year: 'numeric'
                    });
                    var maxTitleLength = 75; // Set the maximum length for the title

                    var truncatedTitle = article.judul_artikel.length > maxTitleLength ?
                        article.judul_artikel.substring(0, maxTitleLength) + '...' :
                        article.judul_artikel;

                    var articleHtml =
                        '<div class="col-6 col-lg-4 mb-5 mb-md-5">' +
                        '<a style="color:black;" class="card-img d-block sk-thumbnail img-ratio-3 rounded-bottom-0" href="/Home/ArtikelDetail?id=' + article.id_artikel + '">' +
                        '<div class="card border rounded-3 sk-fade h-100">' +
                        '<div class="card-zoom position-relative rounded-bottom-0">' +
                        '<img class="shadow-light-lg img-fluid zoom-on-hover" src="/assets/img/' + article.sampul_artikel + '"/>' +
                        '<div class="card-footer p-3">' +
                        '<h6 class="fw-bolder line-clamp-2 mb-0">' + truncatedTitle + '</h6>' +
                        '<span style="color:rgba(0,0,0,0.8);font-size:14px;">' + formattedDate + '</span>' +
                        '</div>' +
                        '</div>' +
                        '</div>' +
                        '</a>' +
                        '</div>';

                    $('#article-list').append(articleHtml);
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }
</script>

