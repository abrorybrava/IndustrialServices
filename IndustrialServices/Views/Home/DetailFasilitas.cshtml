<script>
    loadFasilitasDetails(); // Memuat data fasilitas saat halaman dimuat
    function loadFasilitasDetails() {
        var id = '@ViewBag.Id'; // Menggunakan kutip tunggal untuk mengapit variabel Razor
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetFasilitasDetails?id=" + id;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var fasilitas = data; // Mengganti nama variabel fasilitasList menjadi fasilitas agar sesuai dengan penggunaan di bawah

                $.ajax({
                    url: hostname + "GetTipeFasilitas?id=" + fasilitas.id_tipe_fasilitas,
                    method: "GET",
                    contentType: "application/json",
                    success: function (tipeFasilitasDetails) {
                        var tipe_fasilitas = tipeFasilitasDetails.tipe_fasilitas;

                        // Simpan deskripsi fasilitas dalam variabel JavaScript
                        var deskripsiFasilitas = '<p style="text-align:justify;">' + fasilitas.deskripsi_fasilitas + '</p>';

                        var headerRow = '<h5 style="color: rgba(0,0,0,0.4); font-family: Barlow; font-weight: 300; font-size: 24px; margin-bottom: 0px;">Facility - ' + tipe_fasilitas + '</h5>' +
                            '<h6 style="color: black; font-family: Barlow; font-weight: 600; font-size: 36px; margin-bottom: 20px;">' + fasilitas.nama_fasilitas + '</h6>';

                        $('#load-header-fasilitas').append(headerRow);
                        $('#load-detail-fasilitas').append(deskripsiFasilitas);
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }


    loadPhotoFasilitas();

    function loadPhotoFasilitas() {
        var id = @ViewBag.Id;
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetPhotoFasilitas?id=" + id;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var fasilitasList = data;

                fasilitasList.forEach(function (fasilitas) {
                    var headerRow = '<div class="row justify-content-center">' +
                        '<img class="shadow-light-lg img-fluid m-1" src="/assets/img/' + fasilitas.path_foto_fasilitas + '" style="width: 400px; height: auto;" />' +
                        '</div>' +
                        '<br />';

                    $('#load-photo').append(headerRow);
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }



</script>