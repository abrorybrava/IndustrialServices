<script>
    loadProduk();
    function loadProduk() {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAllProdukInWeb";
        var method = "GET";

        $('#data-list').empty();

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var dataList = data;

                dataList.forEach(function (produk) {
                    $.ajax({
                        url: hostname + "GetTipeProduk?id=" + produk.id_tipe_produk,
                        method: "GET",
                        contentType: "application/json",
                        success: function (produkTypeDetails) {
                            var produk_type = produkTypeDetails.tipe_produk;
                            var cardHtml =
                                '<div class="col-xs-12 col-sm-4">' +
                                '<a href="/Home/DetailProduk?id=' + produk.id_produk + '"> ' +
                                '<div class="card bg-dark text-white" style="border:none;box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">' +
                                '<img src="/assets/img/' + produk.path_foto_produk + '" class="card-img img-fluid" alt="' + produk.nama_produk + '">' +
                                '<div class="card-img-overlay d-flex flex-column">' +
                                '<div class="card-category" style="font-size: 16px; font-weight: bold;font-family:Barlow;">' + produk_type + '</div>' +
                                '<div class="card-description flex-grow-1">' +
                                '<h2 class="card-title" style="font-size: 24px; font-weight: bold;font-family:Barlow;">' + produk.nama_produk + '</h2>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</a>' +
                                '</div>';

                            $('#data-list').append(cardHtml);
                        },
                        error: function (xhr, status, error) {
                            console.error("Error:", error);
                        }
                    });
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }
</script>

