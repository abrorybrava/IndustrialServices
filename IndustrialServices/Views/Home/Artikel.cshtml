<script>
    var filter = "bulan";
    loadArtikels(filter);

    function loadArtikels(filter) {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAllArtikelsDone";
        var method = "GET";
        if (filter) {
            url += "?filter=" + filter;
        }
        $('#article-list').empty();

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var articleList = data.data;

                if (articleList.length === 0) {
                    // No articles found, display a card or message
                    var noArticleHtml =
                        '<div class="col-12 text-center" >' +
                        '<div class="card border rounded-3 p-4" style="background-color:rgba(0,0,0,0.1); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">' +
                        '<h4 class="fw-bold mb-3" style="font-family: Barlow;">No articles found</h4>' +
                        '<p class="text-muted">There are no articles matching the specified filter.</p>' +
                        '</div>' +
                        '</div>';

                    $('#article-list').append(noArticleHtml);
                } else {
                    // Display articles
                    articleList.forEach(function (article) {
                        var formattedDate = new Date(article.tanggal_rilis).toLocaleDateString('en-US', {
                            day: 'numeric',
                            month: 'long',
                            year: 'numeric'
                        });

                        var maxTitleLength = 45;
                        var truncatedTitle = article.judul_artikel.length > maxTitleLength ?
                            article.judul_artikel.substring(0, maxTitleLength) + '...' :
                            article.judul_artikel;

                        var articleHtml =
                            '<div class="col-6 col-lg-4 mb-5 mb-md-5">' +
                            '<a class="card-link" class="card-img d-block sk-thumbnail img-ratio-3 rounded-bottom-0" href="/Home/ArtikelDetail?id=' + article.id_artikel + '">' +
                            '<div class="card border rounded-3 sk-fade h-100">' +
                            '<div class="card-zoom position-relative rounded-bottom-0">' +
                            '<img class="shadow-light-lg img-fluid zoom-on-hover" src="/assets/img/' + article.sampul_artikel + '" alt="Article Image" />' +
                            '<div class="card-footer p-3">' +
                            '<h6 class="fw-bolder line-clamp-2 mb-0" style="font-family:Barlow;">' + truncatedTitle + '</h6>' +
                            '<span class="text-muted" style="font-size:14px;font-family:Barlow;">' + formattedDate + '</span>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</a>' +
                            '</div>';

                        $('#article-list').append(articleHtml);
                    });
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }

    $("#filter").change(function () {
        // Panggil fungsi loadTenagaPengajarTechnical saat ada perubahan pada elemen <select>
        var selectedFilter = $(this).val();
        loadArtikels(selectedFilter);
    });

</script>

