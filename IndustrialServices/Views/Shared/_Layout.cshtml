<script>
    function showSuggestions() {
        var input = document.getElementById('searchInput').value.trim().toLowerCase();

        // Dummy data for suggestions
        var suggestions = [
            { label: 'Product 1', category: 'Products' },
            { label: 'Product 2', category: 'Products' },
            { label: 'Product 3', category: 'Products' },
            { label: 'Service 1', category: 'Services' },
            { label: 'Service 2', category: 'Services' },
            { label: 'Training 1', category: 'Training' },
            { label: 'Training 2', category: 'Training' }
        ];

        var filteredSuggestions = suggestions.filter(function (item) {
            return item.label.toLowerCase().includes(input);
        });

        var suggestionsElement = document.getElementById('searchSuggestions');
        suggestionsElement.innerHTML = '';

        if (input !== '') {
            var currentCategory = null;

            filteredSuggestions.forEach(function (item) {
                // Check if the category has changed
                if (item.category !== currentCategory) {
                    // Add header label for the new category
                    var categoryHeader = document.createElement('div');
                    categoryHeader.textContent = item.category;
                    categoryHeader.classList.add('suggestion-category');
                    suggestionsElement.appendChild(categoryHeader);

                    // Update current category
                    currentCategory = item.category;
                }

                var suggestionItem = document.createElement('div');
                suggestionItem.classList.add('suggestion-item');

                // Create a span for label
                var labelSpan = document.createElement('span');
                labelSpan.textContent = item.label;

                suggestionItem.appendChild(labelSpan);

                suggestionItem.onclick = function () {
                    // Dummy action when suggestion is clicked
                    alert('You selected: ' + item.label);
                };

                suggestionsElement.appendChild(suggestionItem);
            });

            // Display the suggestion panel
            suggestionsElement.style.display = 'block';
        } else {
            // Hide the suggestion panel when input is empty
            suggestionsElement.style.display = 'none';
        }
    }


</script>