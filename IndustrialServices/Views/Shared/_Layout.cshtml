<script>
    function showSuggestions() {
        var input = document.getElementById('searchInput').value.trim().toLowerCase();
        var suggestionsElement = document.getElementById('searchSuggestions');
        suggestionsElement.innerHTML = '';

        if (input !== '') {
            var hostname = "https://localhost:7033/";
            var url = hostname + "BigSearch?search=" + input;
            var method = "GET";

            // Using AJAX to fetch suggestions from the back end
            $.ajax({
                url: url,
                method: method,
                contentType: 'application/json',
                success: function (data) {
                    var suggestions = data;
                    var currentCategory = null;

                    suggestions.forEach(function (item) {
                        if (item.id_artikel != 0) {
                            var categoryHeader = document.createElement('div');
                            categoryHeader.textContent = 'Artikel';
                            categoryHeader.classList.add('suggestion-category');
                            suggestionsElement.appendChild(categoryHeader);

                            currentCategory = item.id_artikel;

                            var suggestionItem = document.createElement('div');
                            suggestionItem.classList.add('suggestion-item');

                            var imageElement = document.createElement('img');
                            imageElement.src = '/assets/img/' + item.sampul_artikel;
                            imageElement.alt = item.judul_artikel;
                            imageElement.classList.add('suggestion-image');
                            imageElement.style.width = '70px';
                            imageElement.style.padding = '5px';
                            suggestionItem.appendChild(imageElement);

                            var maxTitleLength = 40;
                            var truncatedTitle = item.judul_artikel.length > maxTitleLength ?
                                item.judul_artikel.substring(0, maxTitleLength) + '...' :
                                item.judul_artikel;

                            var labelSpan = document.createElement('span');
                            labelSpan.textContent = truncatedTitle;
                            suggestionItem.appendChild(labelSpan);

                            suggestionItem.onclick = function () {
                                window.location.href = "/Home/ArtikelDetail?id=" + item.id_artikel;
                            };

                            suggestionsElement.appendChild(suggestionItem);
                        }

                        if (item.id_tipe_pelatihan != 0) {
                            $.ajax({
                                url: hostname + "GetTipePelatihan?id=" + item.id_tipe_pelatihan,
                                method: "GET",
                                contentType: "application/json",
                                success: function (tipePelatihanDetails) {
                                    var tipe_pelatihan = tipePelatihanDetails.tipe_pelatihan;
                            var categoryHeader = document.createElement('div');
                            categoryHeader.textContent = 'Pelatihan';
                            categoryHeader.classList.add('suggestion-category');
                            suggestionsElement.appendChild(categoryHeader);

                            currentCategory = item.id_tipe_pelatihan;

                            var suggestionItem = document.createElement('div');
                            suggestionItem.classList.add('suggestion-item');

                            var imageElement = document.createElement('img');
                            imageElement.src = '/assets/img/' + item.path_foto_pelatihan;
                            imageElement.alt = item.label;
                            imageElement.classList.add('suggestion-image');
                            imageElement.style.width = '70px';
                                    imageElement.style.padding = '5px';
                            suggestionItem.appendChild(imageElement);

                            var labelSpan = document.createElement('span');
                            labelSpan.textContent = item.nama_pelatihan + ' (' + tipe_pelatihan + ')';

                            suggestionItem.appendChild(labelSpan);

                            suggestionItem.onclick = function () {
                                if(tipePelatihanDetails.bidang_keahlian === 'Technical'){
                                       window.location.href = "/Home/DetailPelatihanTechnical?id=" + item.id_pelatihan;
                                        } else if (tipePelatihanDetails.bidang_keahlian === 'Non-Technical'){
                                            window.location.href = "/Home/DetailPelatihanNonTechnical?id=" + item.id_pelatihan;
                                        }
                            };

                            suggestionsElement.appendChild(suggestionItem);
                            }
                            });
                        }

                        if (item.id_tipe_fasilitas != 0) {
                            var categoryHeader = document.createElement('div');
                            categoryHeader.textContent = 'Fasilitas';
                            categoryHeader.classList.add('suggestion-category');
                            suggestionsElement.appendChild(categoryHeader);

                            currentCategory = item.id_tipe_fasilitas;

                            var suggestionItem = document.createElement('div');
                            suggestionItem.classList.add('suggestion-item');

                            var imageElement = document.createElement('img');
                            imageElement.src = '/assets/img/' + item.image;
                            imageElement.alt = item.label;
                            imageElement.classList.add('suggestion-image');
                            imageElement.style.width = '50px';
                            suggestionItem.appendChild(imageElement);

                            var labelSpan = document.createElement('span');
                            labelSpan.textContent = item.nama_fasilitas;

                            suggestionItem.appendChild(labelSpan);

                            suggestionItem.onclick = function () {
                                // Dummy action when suggestion is clicked
                                alert('You selected: ' + item.label);
                            };

                            suggestionsElement.appendChild(suggestionItem);
                        }
                    });

                    suggestionsElement.style.display = 'block';
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        } else {
            suggestionsElement.style.display = 'none';
        }
    }






</script>