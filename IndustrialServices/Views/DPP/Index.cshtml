        var foto2 = document.getElementById("addphoto2").files[0];
        var foto3 = document.getElementById("addphoto3").files[0];
        var foto4 = document.getElementById("addphoto4").files[0];
        var foto5 = document.getElementById("addphoto5").files[0];

