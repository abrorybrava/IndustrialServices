<script>
    loadPengelolaWeb();

    function loadPengelolaWeb() {
        var hostname = "https://localhost:7033/";
        var url = hostname + "GetAllPengelolaWeb";
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var list = data.data;
                list.forEach(function (pengelola, index) {
                    var statusText = pengelola.status === 1 ? "Active" : "Inactive";
                    var newRow = '<tr>' +
                        '<td>' + (index + 1) + '</td>' +
                        '<td>' + pengelola.nama_pengelola + '</td>' +
                        '<td>' + pengelola.username + '</td>' +
                        '<td>' + pengelola.peran + '</td>' +
                        '<td>' + statusText + '</td>' +
                        '<td>' +
                        '<button class="btn btn-primary editPengelolaWeb" data-id="' + pengelola.id_pengelola + '"><i class="fas fa-edit"></i></button>' +
                        '<button class="btn btn-success editusnpwPengelolaWeb" data-id="' + pengelola.id_pengelola + '"><i class="fas fa-key"></i></button>' +
                        '<button class="btn btn-danger" value="' + pengelola.id_pengelola + '" onclick="hapus(this.value)"><i class="fas fa-trash"></i></button>' +
                        '</td>' +
                        '</tr>';

                    $('#tbodyPengelolaWeb').append(newRow);

                    // Event listener for edit button
                    $('.editPengelolaWeb[data-id="' + pengelola.id_pengelola + '"]').click(function () {
                        var id_pengelola = $(this).data("id");
                        loadEditPengelolaWeb(id_pengelola);
                    });
                    $('.editusnpwPengelolaWeb[data-id="' + pengelola.id_pengelola + '"]').click(function () {
                        var id_pengelola = $(this).data("id");
                        loadEditUsnPwPengelolaWeb(id_pengelola);
                    });
                });
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }



    function hapus(id) {
        // Tampilkan SweetAlert konfirmasi sebelum menghapus
        Swal.fire({
            title: 'Are you sure?',
            text: 'This data will deleted permanent!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                var hostname = "https://localhost:7033/";
                var url = hostname + "DeletePengelolaWeb?id=" + id;
                var method = "POST";
                $.ajax({
                    url: url,
                    method: method,
                    contentType: "application/json",
                    success: function (data) {
                        // Tampilkan SweetAlert sukses setelah menghapus
                        Swal.fire(
                            'Deleted!',
                            'Your data has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                        // Tampilkan SweetAlert error jika terjadi kesalahan saat menghapus
                        Swal.fire(
                            'Error!',
                            'Failed to delete data.',
                            'error'
                        );
                    }
                });
            }
        });
    }

    $(".addPengelolaWeb").click(function () {
        $("#addPengelolaWebModal_").modal("show");
    });

    function cancel() {
        document.getElementById("nama_pengelola").value = "";
        document.getElementById("username").value = "";
        document.getElementById("password").value = "";
        document.getElementById("peran").value = "--- Choose Role ---";
    }


    function simpan() {
        var nama_pengelola = document.getElementById("nama_pengelola").value;
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;
        var peran = document.getElementById("peran").value;
        var status = document.getElementById("status").value;

        var input = {
            nama_pengelola: nama_pengelola,
            username: username,
            password: password,
            peran: peran,
            status: status
        };

        if(nama_pengelola == '' || username == '' || password == '' || peran == ''){
            Swal.fire({
                icon: 'error',
                title: 'Warning!',
                text: 'Please fill in all fields!',
            });
            return; // Keluar dari fungsi jika NPK bukan angka
        }

        var hostname = "https://localhost:7033/";
        var url = hostname + "InsertPengelolaWeb";
        var method = "POST";


        $.ajax({
            url: url,
            method: method,
            data: JSON.stringify(input),
            contentType: "application/json",
            success: function (data) {
                console.log(data.messages);

                if (data.status === 500) {
                    // Tampilkan SweetAlert jika username sudah tersedia
                    Swal.fire({
                        icon: 'error',
                        title: 'Warning!',
                        text: 'Username or Password already used!',
                    });
                } else {
                    // Redirect hanya jika tidak ada error
                    location.reload();
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });
    }

    $(".editPengelolaWeb").click(function () {
