<script>
    document.addEventListener('DOMContentLoaded', function () {
        const passwordInput = document.getElementById('yourPassword');
        const showPasswordCheckbox = document.getElementById('showPassword');

        showPasswordCheckbox.addEventListener('change', function () {
            if (showPasswordCheckbox.checked) {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        });
    });
    function login() {
        var username = document.getElementById('yourUsername').value;
        var password = document.getElementById('yourPassword').value;

        var hostname = "https://localhost:7033/"; // Replace with your API URL
        var url = hostname + "Login?username=" + username + "&password=" + password;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                console.log(data);
                if (data.status === 500) {
                    document.getElementById('yourUsername').value = '';
                    document.getElementById('yourPassword').value = '';
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Username or Password!',
                        text: 'Please try again with correct credentials.',
                    });
                } else {
                    var id = data.data.id_pengelola;
                    var role = data.data.peran;
                    var nama = data.data.nama_pengelola;
                    console.log(role, nama);

                    // Wait for the DOM to be fully loaded
                    $(document).ready(function () {
                        redirectBasedOnRole(role, nama, id);
                    });
                }
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
                // Handle error
            }
        });
    }
    function redirectBasedOnRole(role, nama, id) {
        // Call the RedirectBasedOnRole action with the role parameter
        window.location.href = "/Login/RedirectBasedOnRole?role=" + role + "&nama=" + nama + "&id=" + id;
    }




</script>